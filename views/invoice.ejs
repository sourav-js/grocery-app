<div id="canvas_div_pdf">
<table class="table" style="padding-top:50px">

  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">orderId</th>

     
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Road</th>
      <th scope="col">Locality</th>
      <th scope="col">City</th>
      <th scope="col">Landmark</th>


      <th scope="col">Product</th>
      <th scope="col">totalPrice</th>
       <%if(orders.size){%>
            <th scope="col">Size</th>

      <%}%>
      <th scope="col">Quantity</th>
      <th scope="col">Pay</th>

       <th scope="col">Date</th>



    </tr>
  </thead>
  <tbody>
    <tr>
      
      <th scope="row"><i class="fas fa-hand-point-right"></i></th>
      <th scope="row"><b><%=orders._id%></b></th>

     
      <td><%=orders.name%></td>
      <td><%=orders.author.username%></td>
      <td><%=orders.phone%></td>
      <td><%=orders.roadNumber%></td>
      <td><%=orders.locality%></td>
      <td><%=orders.city%></td>
      <td><%-orders.landmark%></td>
      
      <td><%=orders.productD%></td>
      <td><%=orders.Price%></td>
      <%if(orders.size){%>
       <td><%=orders.size%></td>
       <%}%>
      <td><%=orders.qty%></td>
      <td><%=orders.pay%></td>

      <td><%=orders.date.toLocaleString("en-UN")%></td>
      

    </tr>
  </tbody>
    

</table>

  <h2 style="color:green;padding-top:50px;font-size:150px" align="center"> <i class="far fa-check-circle"> GroceryJi</h2></i>


</div>




<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.8.0/html2pdf.bundle.min.js"></script>






